<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".data.view.MainActivity">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_cafe"
        android:contentDescription="Logo de Quiet Space"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiet Space"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trouvez l'endroit parfait pour travailler ou vous détendre"
        android:textColor="#666"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/btnViewCafes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Découvrir les cafés"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:backgroundTint="#3F51B5"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center" />

</LinearLayout>