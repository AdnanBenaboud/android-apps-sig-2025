<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlaySearchBox">
        <!-- famille de coins arrondis -->
        <item name="cornerFamily">rounded</item>
        <!-- taille du rayon -->
        <item name="cornerSize">24dp</item>
    </style>
    <style name="SearchBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- applique notre overlay de coins -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlaySearchBox</item>
        <!-- couleur et épaisseur du contour -->
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">2dp</item>
        <!-- fond blanc à l’intérieur -->
        <item name="boxBackgroundColor">@color/white</item>
    </style>
    <style name="FilterButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:checkable">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">32dp</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>