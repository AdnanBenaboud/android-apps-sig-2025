<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- IMAGE EN PLEINE LARGEUR -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <!-- Dégradé noir semi-transparent -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/top_image_overlay" />

            <!-- Titre et sous-titres -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:orientation="vertical"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/detailLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📍 Maroc"
                    android:textColor="#FFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Musée la Kasbah"
                    android:textColor="#FFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Boutons flottants -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:orientation="horizontal"
                android:padding="12dp">


            </LinearLayout>
        </FrameLayout>
        <!-- Icônes sous l'image -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="8dp"
            android:gravity="center_vertical">

            <!-- Bloc gauche : icônes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/icon_share"
                    android:layout_width="151dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_bg"
                    android:contentDescription="Partager"
                    android:padding="8dp"
                    android:src="@drawable/ic_share" />

                <!-- Bloc droite : visites -->
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/visitesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/desc_background"
                    android:gravity="center_vertical"
                    android:text="👥 123"
                    android:textColor="#555"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>


        <!-- CONTENU AVEC PADDING -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- Icônes sous l'image -->


            <!-- Séparateur -->

            <TextView
                android:id="@+id/detailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/desc_background"
                android:padding="12dp"
                android:textColor="#333"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#CCC" />

            <!-- Emplacement -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Emplacement"
                    android:textSize="14sp"
                    android:textColor="#777" />

                <TextView
                    android:id="@+id/emplacementText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="#0000FF"
                    android:gravity="end" />
            </LinearLayout>



            <!-- Séparateur -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#EEE" />
            <!-- Nature du relief -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nature du relief"
                    android:textSize="14sp"
                    android:textColor="#777" />

                <TextView
                    android:id="@+id/natureReliefText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Séparateur -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#EEE" />

            <!-- Coordonnées GPS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Coordonnées"
                    android:textSize="14sp"
                    android:textColor="#777" />

                <TextView
                    android:id="@+id/detailCoords"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Séparateur -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#CCC" />

            <!-- Bouton suggestion -->
            <Button
                android:id="@+id/btn_suggest_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="⚠️Suggérer une modification"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:background="@drawable/rounded_button_bg" />


            <!-- Rating Bar -->
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:layout_marginTop="16dp"
                android:progressTint="@android:color/holo_orange_light"
                android:secondaryProgressTint="@android:color/darker_gray"
                android:progressBackgroundTint="@android:color/darker_gray"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- Champ utilisateur -->
            <EditText
                android:id="@+id/usernameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Nom d'utilisateur"
                android:minHeight="48dp" />

            <!-- Bouton d'envoi -->
            <Button
                android:id="@+id/submitReviewBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Envoyer la note"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorPrimary"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/commentSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Commentaires"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp" />

            <EditText
                android:id="@+id/commentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Écrire un commentaire..."
                android:layout_margin="16dp" />
            <Button
                android:id="@+id/btnChooseImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginLeft="16dp"

                android:background="@drawable/ic_attach_file2" />
            <ImageView
                android:id="@+id/previewImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />



            <Button
                android:id="@+id/submitCommentBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Envoyer"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:id="@+id/commentsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
